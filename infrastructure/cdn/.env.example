# CloudFront CDN Configuration
# Copy to .env and fill in actual values

# Enable CDN
CDN_ENABLED=true
CDN_PROVIDER=cloudfront

# CloudFront Distribution Configuration
CLOUDFRONT_DOMAIN=d123456abcdef.cloudfront.net
CLOUDFRONT_DISTRIBUTION_ID=E123ABC456DEF
CLOUDFRONT_KEY_GROUP_ID=k123abc456
CLOUDFRONT_PUBLIC_KEY_ID=APKAJ7EXAMPLE

# Origin Configuration
CLOUDFRONT_ORIGIN_VERIFY_TOKEN=your-generated-secret-token-here
CLOUDFRONT_ORIGIN_VERIFY_HEADER=X-Origin-Verify

# Private Key for Signing Media URLs
CLOUDFRONT_PRIVATE_KEY_PATH=/etc/secrets/cloudfront-private-key.pem

# S3 Logs Bucket
CDN_LOGS_BUCKET=thebot-cloudfront-logs-123456789012

# Static Files Configuration
STATIC_URL_CDN=https://d123456abcdef.cloudfront.net/static/
MEDIA_URL_CDN=https://d123456abcdef.cloudfront.net/media/

# Signed URL Configuration
SIGNED_URL_ENABLED=true
SIGNED_URL_TTL_SECONDS=3600  # 1 hour, increase for shareable links

# Frontend CDN Configuration
VITE_CDN_ENABLED=true
VITE_CDN_DOMAIN=d123456abcdef.cloudfront.net

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# Cache Configuration (optional overrides)
# CACHE_CONTROL_HASHED_ASSETS=public, max-age=31536000, immutable
# CACHE_CONTROL_STATIC_FILES=public, max-age=2592000, must-revalidate
# CACHE_CONTROL_MEDIA_FILES=public, max-age=604800, must-revalidate
# CACHE_CONTROL_HTML=public, max-age=3600, must-revalidate

# Geo-restriction (optional)
# CLOUDFRONT_GEO_RESTRICTION_ENABLED=false
# CLOUDFRONT_GEO_RESTRICTION_TYPE=none
# CLOUDFRONT_GEO_RESTRICTION_LOCATIONS=US,CA,GB

# Logging
CLOUDFRONT_LOGS_ENABLED=true
CLOUDFRONT_LOGS_RETENTION_DAYS=90
