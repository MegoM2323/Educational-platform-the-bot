# THE_BOT Platform - Deployment Configuration Template
# Copy this to deploy/.env and fill in your values

# Production Server Details
PROD_SERVER=mg@5.129.249.206
PROD_HOME=/home/mg/THE_BOT_platform

# Python Environment
VENV_PATH=/home/mg/venv
PYTHON_BIN=/home/mg/venv/bin/python

# Backup Configuration
BACKUP_DIR=/home/mg/backups
BACKUP_RETENTION_DAYS=7

# Database Configuration (will be read from production .env)
DB_NAME=thebot_db
DB_USER=thebot_user

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Systemd Services
SERVICES="thebot-daphne.service thebot-celery-worker.service thebot-celery-beat.service"

# Health Check Configuration
HEALTH_CHECK_URL=http://localhost:8001/api/health/
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRIES=3

# Deployment Behavior
ROLLBACK_ON_ERROR=true
MAX_RETRIES=3
RETRY_DELAY=5

# Logging
LOG_LEVEL=INFO
LOG_DIR=/home/mg/THE_BOT_platform/logs

# Feature Flags
ENABLE_BACKUP=true
ENABLE_FRONTEND_BUILD=false
ENABLE_MIGRATIONS=true

# Verbosity
VERBOSE=false
