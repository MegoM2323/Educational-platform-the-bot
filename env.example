# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=['127.0.0.1', 'localhost']

# Telegram Bot Settings
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
# ID канала (начинается с -100)
TELEGRAM_CHAT_ID=your_channel_id_here

# Supabase Settings (если используется)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# YooKassa Settings (если используется)
YOOKASSA_SHOP_ID=your_shop_id_here
YOOKASSA_SECRET_KEY=your_secret_key_here
YOOKASSA_WEBHOOK_URL=your_webhook_url_here

# Frontend Settings
VITE_DJANGO_API_URL=http://localhost:8000/api

# Cache Settings
# Для включения Redis кэширования установите USE_REDIS_CACHE=True
# Для работы без кэширования (локальная память) установите USE_REDIS_CACHE=False
USE_REDIS_CACHE=False
# URL Redis сервера (используется только если USE_REDIS_CACHE=True)
REDIS_URL=redis://127.0.0.1:6379
