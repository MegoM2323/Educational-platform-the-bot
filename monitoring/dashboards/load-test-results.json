{
  "dashboard": {
    "title": "K6 Load Test Results",
    "description": "Performance metrics from k6 load testing",
    "tags": ["k6", "performance", "load-testing"],
    "timezone": "UTC",
    "panels": [
      {
        "id": 1,
        "title": "Request Duration (ms)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, http_req_duration_ms)",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, http_req_duration_ms)",
            "legendFormat": "p99"
          },
          {
            "expr": "max(http_req_duration_ms)",
            "legendFormat": "max"
          }
        ],
        "yaxes": [
          {
            "format": "ms"
          }
        ],
        "alert": {
          "name": "High Response Time",
          "message": "p95 response time exceeds 500ms",
          "conditions": [
            {
              "evaluator": {
                "type": "gt",
                "params": [500]
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "type": "last"
              },
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_req_failed_total[1m])",
            "legendFormat": "error_rate"
          }
        ],
        "thresholds": "0,0.01",
        "colorMode": "background"
      },
      {
        "id": 3,
        "title": "Requests Per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_reqs_total[1m])",
            "legendFormat": "req/s"
          }
        ],
        "yaxes": [
          {
            "format": "rps"
          }
        ]
      },
      {
        "id": 4,
        "title": "Active Virtual Users",
        "type": "graph",
        "targets": [
          {
            "expr": "k6_vus",
            "legendFormat": "VUs"
          },
          {
            "expr": "k6_vus_max",
            "legendFormat": "VUs max"
          }
        ],
        "yaxes": [
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 5,
        "title": "HTTP Status Codes",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (status) (http_reqs_total)",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "k6_memory_usage_mb",
            "legendFormat": "memory"
          }
        ],
        "yaxes": [
          {
            "format": "bytes"
          }
        ]
      },
      {
        "id": 7,
        "title": "WebSocket Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "k6_ws_connects_total",
            "legendFormat": "connects"
          },
          {
            "expr": "k6_ws_disconnects_total",
            "legendFormat": "disconnects"
          }
        ]
      },
      {
        "id": 8,
        "title": "API Endpoint Performance",
        "type": "table",
        "targets": [
          {
            "expr": "http_req_duration_ms",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "endpoint": "Endpoint",
                "p95": "p95 (ms)",
                "p99": "p99 (ms)",
                "count": "Count"
              }
            }
          }
        ]
      }
    ],
    "refresh": "30s",
    "schemaVersion": 27,
    "style": "dark",
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "datasource": "Prometheus"
        },
        {
          "name": "job",
          "type": "query",
          "query": "label_values(http_reqs_total, job)",
          "refresh": 1
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
