# ============================================
# MAIN CONFIGURATION
# ============================================

# For production: https://the-bot.ru
# For development: http://localhost:8080
FRONTEND_URL=https://your-domain.com

# Django Settings
SECRET_KEY=your-secret-key-here-min-50-chars-recommended

# Production: False | Development: True
DEBUG=False

# Telegram Bot settings
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_LOG_CHAT_ID=your-log-chat-id-here
TELEGRAM_PUBLIC_CHAT_ID=your-public-chat-id-here

# Supabase Settings (если используется)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-anon-key-here
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Connect to Supabase via connection pooling
DATABASE_URL=postgresql://user:password@host:port/database?pgbouncer=true

# Direct connection to the database. Used for migrations
DIRECT_URL=postgresql://user:password@host:port/database

# ============================================
# YOOKASSA PAYMENT SETTINGS
# ============================================

YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key

# CRITICAL: Must end with trailing slash!
# For production: https://the-bot.ru/yookassa-webhook/
YOOKASSA_WEBHOOK_URL=https://your-domain.com/yookassa-webhook/

# Test mode: True (for development/testing)
# Production: False (for real payments)
PAYMENT_TEST_MODE=False

# Development payment amounts (when PAYMENT_TEST_MODE=True)
DEVELOPMENT_PAYMENT_AMOUNT=1.00
DEVELOPMENT_RECURRING_INTERVAL_MINUTES=10

# ============================================
# FRONTEND SETTINGS
# ============================================

# For production: https://the-bot.ru
# For development: http://localhost:8080
FRONTEND_URL_API=https://the-bot.ru/api

# Vite build settings
# For production: https://the-bot.ru/api
# For development: http://localhost:8000/api
VITE_DJANGO_API_URL=http://localhost:8000/api

# ============================================
# REDIS CACHE & MESSAGE BROKER
# ============================================

# IMPORTANT: Redis is required for Celery (recurring payments) and WebSocket channels
# Install: sudo apt-get install redis-server
# Check: redis-cli ping (should return PONG)

# Enable Redis caching
USE_REDIS_CACHE=True

# Enable Redis for WebSocket channels
USE_REDIS_CHANNELS=True

# Redis connection URL
# For local development: redis://127.0.0.1:6379/0
# Adjust db number (0-15) if needed for different environments
REDIS_URL=redis://127.0.0.1:6379/0
