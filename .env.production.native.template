# THE_BOT Platform - Native Production ENV Template
# Server: the-bot.ru (mg@5.129.249.206)
# Copy to .env.production.native and fill secrets

ENVIRONMENT=production
DEBUG=False

# ============================================================================
# DATABASE (Local PostgreSQL on same server)
# ============================================================================
DATABASE_URL=postgresql://{{DB_USER}}:{{DB_PASSWORD}}@localhost:5432/{{DB_NAME}}
DB_HOST=localhost
DB_NAME=thebot_db
DB_USER=thebot_user
DB_PASSWORD={{AUTO_GENERATED}}
DB_PORT=5432
DB_SSLMODE=disable

# ============================================================================
# DJANGO BACKEND CONFIGURATION
# ============================================================================
SECRET_KEY={{AUTO_GENERATED}}
ALLOWED_HOSTS=the-bot.ru,www.the-bot.ru,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://the-bot.ru,https://www.the-bot.ru,http://localhost,http://127.0.0.1

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
FRONTEND_URL=https://the-bot.ru
API_URL=https://the-bot.ru/api
WS_URL=wss://the-bot.ru/ws
FRONTEND_PORT=80
NODE_ENV=production
APP_NAME=THE_BOT

# ============================================================================
# REDIS CONFIGURATION (Local Redis on same server)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD={{AUTO_GENERATED}}
USE_REDIS_CACHE=True
USE_REDIS_CHANNELS=True

# ============================================================================
# CELERY (КРИТИЧНО для recurring payments)
# ============================================================================
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_ENABLED=True

# ============================================================================
# EXTERNAL SERVICES (Optional - functionality works without them)
# ============================================================================
TELEGRAM_BOT_TOKEN={{MANUAL_INPUT}}
OPENROUTER_API_KEY={{MANUAL_INPUT}}
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
PACHCA_FORUM_API_TOKEN=

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
DJANGO_SETTINGS_MODULE=config.settings
PYTHONUNBUFFERED=1
