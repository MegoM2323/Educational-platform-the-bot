[flake8]
# Maximum line length
max-line-length = 127

# Complexity settings
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    node_modules

# Ignore specific error codes
ignore =
    E203,
    E501,
    W503,
    W504

# Error codes to select
select =
    E,
    W,
    F,
    C,
    N

# Per-file ignores
per-file-ignores =
    __init__.py: F401
    settings.py: F405, F403
    migrations/*.py: E501, F401, F841
