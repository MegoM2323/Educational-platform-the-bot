# ELK Stack Environment Configuration
# Copy to .env and update values as needed

# ==================== ELASTICSEARCH ====================
# Memory allocation for Elasticsearch JVM
ES_JAVA_OPTS=-Xms512m -Xmx512m

# Elasticsearch cluster name
ELASTICSEARCH_CLUSTER_NAME=thebot-logs

# Elasticsearch node name
ELASTICSEARCH_NODE_NAME=es-node-1

# Network binding
ELASTICSEARCH_HOST=0.0.0.0
ELASTICSEARCH_PORT=9200

# Discovery settings for multi-node clusters
ELASTICSEARCH_DISCOVERY_TYPE=single-node

# Authentication (set to true for production)
XPACK_SECURITY_ENABLED=false
ELASTIC_PASSWORD=changeme

# ==================== LOGSTASH ====================
# Memory allocation for Logstash JVM
LS_JAVA_OPTS=-Xmx256m -Xms256m

# Logstash configuration
LOGSTASH_HOST=0.0.0.0
LOGSTASH_PORT=5000

# Elasticsearch connection
ELASTICSEARCH_HOSTS=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=

# Logstash log level (debug, info, warn, error)
LOG_LEVEL=info

# ==================== KIBANA ====================
# Server settings
KIBANA_HOST=0.0.0.0
KIBANA_PORT=5601

# Elasticsearch settings
KIBANA_ELASTICSEARCH_HOSTS=http://elasticsearch:9200
KIBANA_ELASTICSEARCH_USERNAME=elastic
KIBANA_ELASTICSEARCH_PASSWORD=

# Default index pattern
KIBANA_INDEX_PATTERN=thebot-logs-*

# ==================== FILEBEAT ====================
# Logstash output
FILEBEAT_LOGSTASH_HOSTS=logstash:5000

# Elasticsearch output
FILEBEAT_ELASTICSEARCH_HOSTS=elasticsearch:9200

# ==================== METRICBEAT ====================
# Elasticsearch output
METRICBEAT_ELASTICSEARCH_HOSTS=elasticsearch:9200

# Kibana connection for dashboards
METRICBEAT_KIBANA_HOSTS=kibana:5601

# ==================== APPLICATION ====================
# Application environment
ENVIRONMENT=development

# Log settings
LOG_PATH=/var/log/thebot
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Platform info
PLATFORM=thebot
VERSION=1.0.0

# ==================== DOCKER ====================
# Docker networking
DOCKER_NETWORK=logging-network

# Volume driver
VOLUME_DRIVER=local

